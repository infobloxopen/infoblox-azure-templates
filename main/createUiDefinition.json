{
  "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.1.2-preview",
  "parameters": {
    "basics": [
      {
        "name": "niosModel",
        "type": "Microsoft.Common.DropDown",
        "label": "NIOS model",
        "defaultValue": "TE-V1425",
        "toolTip": "Select the NIOS model to load on the new VM",
        "constraints": {
          "allowedValues": [
            {
              "label": "TE-V825",
              "value": "IB-V825"
            },
            {
              "label": "TE-V1425",
              "value": "IB-V1425"
            },
            {
              "label": "TE-V2225",
              "value": "IB-V2225"
            },
            {
              "label": "TE-V4015",
              "value": "IB-V4015"
            },
            {
              "label": "TE-V4025",
              "value": "IB-V4025"
            },
            {
              "label": "TE-V5005",
              "value": "IB-V5005"
            },
            {
              "label": "CP-V805",
              "value": "cp-v805"
            },
            {
              "label": "CP-V1405",
              "value": "cp-v1405"
            },
            {
              "label": "CP-V2205",
              "value": "cp-v2205"
            }
          ]
        },
        "visible": true
      },
      {
        "name": "vmName",
        "type": "Microsoft.Common.TextBox",
        "label": "NIOS VM name",
        "toolTip": "The name of the new NIOS vm.",
        "constraints": {
          "required": true,
          "regex": "^(([0-9a-zA-Z][0-9a-zA-Z-.]{0,63}[0-9a-zA-Z])|[0-9a-zA-Z]).{1,64}$",
          "validationMessage": "The length must be between 1 and 64 characters. The first and the last characters must be letters or numbers. The remaining characters must be letters, numbers, periods or dashes."
        }
      },
      {
        "name": "passwordSection",
        "type": "Microsoft.Common.Section",
         "label": "Password for 'admin' user",
         "elements": [
        {
          "name": "adminPassword",
          "type": "Microsoft.Common.PasswordBox",
          "label": {
            "password": "'admin' password",
            "confirmPassword": "Confirm 'admin' password"
          },
          "toolTip": "Password for the 'admin' user",
          "constraints": {
            "required": true,
            "regex": "^(?:(?=.*[a-z])(?:(?=.*[A-Z])(?=.*[\\d\\W])|(?=.*\\W)(?=.*\\d))|(?=.*\\W)(?=.*[A-Z])(?=.*\\d)).{12,64}$",
            "validationMessage": "The password must be between 12 and 64 characters long, and contain characters from at least 3 of the following groups: uppercase characters, lowercase characters, numbers, and special characters."
          },
          "options": {
            "hideConfirmation": false
          },
          "visible": true
        }
        ],
        "visible": true
      }
    ],
    "steps": [{
      "name": "vmSettings",
      "label": "VM Settings",
      "bladeTitle": "NIOS VM settings",
      "subLabel": {
        "preValidation": "Configure VM Settings",
        "postValidation": "Done"
      },
      "elements": [
        {
          "name": "niosVersion-IB-V825",
          "type": "Microsoft.Common.DropDown",
          "label": "NIOS version for TE-V825",
          "defaultValue": "8.6.2",
          "toolTip": "Select the version of NIOS to load",
          "constraints": {
            "allowedValues": [
              {
                "label": "8.6.2",
                "value": "862.49947.0"
              }
            ]
          },
          "visible": "[equals(basics('niosModel'), 'IB-V825')]"
        },
        {
          "name": "niosVersion-IB-V1425",
          "type": "Microsoft.Common.DropDown",
          "label": "NIOS version for TE-V1425",
          "defaultValue": "8.6.2",
          "toolTip": "Select the version of NIOS to load",
          "constraints": {
            "allowedValues": [
              {
                "label": "8.6.2",
                "value": "862.49947.0"
              }
            ]
          },
          "visible": "[equals(basics('niosModel'), 'IB-V1425')]"
        },
        {
          "name": "niosVersion-IB-V2225",
          "type": "Microsoft.Common.DropDown",
          "label": "NIOS version for TE-V2225",
          "defaultValue": "8.6.2",
          "toolTip": "Select the version of NIOS to load",
          "constraints": {
            "allowedValues": [
              {
                "label": "8.6.2",
                "value": "862.49947.0"
              }
            ]
          },
          "visible": "[equals(basics('niosModel'), 'IB-V2225')]"
        },
        {
          "name": "niosVersion-IB-V4015",
          "type": "Microsoft.Common.DropDown",
          "label": "NIOS version for TE-V4015",
          "defaultValue": "8.6.2",
          "toolTip": "Select the version of NIOS to load",
          "constraints": {
            "allowedValues": [
              {
                "label": "8.6.2",
                "value": "862.49947.0"
              }
            ]
          },
          "visible": "[equals(basics('niosModel'), 'IB-V4015')]"
        },
        {
          "name": "niosVersion-IB-V4025",
          "type": "Microsoft.Common.DropDown",
          "label": "NIOS version for TE-V4025",
          "defaultValue": "8.6.2",
          "toolTip": "Select the version of NIOS to load",
          "constraints": {
            "allowedValues": [
              {
                "label": "8.6.2",
                "value": "862.49947.0"
              }
            ]
          },
          "visible": "[equals(basics('niosModel'), 'IB-V4025')]"
        },
        {
          "name": "niosVersion-IB-V5005",
          "type": "Microsoft.Common.DropDown",
          "label": "NIOS version for TE-V5005",
          "defaultValue": "8.6.2",
          "toolTip": "Select the version of NIOS to load",
          "constraints": {
            "allowedValues": [
              {
                "label": "8.6.2",
                "value": "862.49947.0"
              }
            ]
          },
          "visible": "[equals(basics('niosModel'), 'IB-V5005')]"
        },
        {
          "name": "niosVersion-CP-V805",
          "type": "Microsoft.Common.DropDown",
          "label": "NIOS version for CP-V805",
          "defaultValue": "8.6.2",
          "toolTip": "Select the version of NIOS to load",
          "constraints": {
            "allowedValues": [
              {
                "label": "8.6.2",
                "value": "862.49947.0"
              }
            ]
          },
          "visible": "[equals(basics('niosModel'), 'cp-v805')]"
        },
        {
          "name": "niosVersion-CP-V1405",
          "type": "Microsoft.Common.DropDown",
          "label": "NIOS version for CP-V1405",
          "defaultValue": "8.5.3",
          "toolTip": "Select the version of NIOS to load",
          "constraints": {
            "allowedValues": [
              {
                "label": "8.6.2",
                "value": "862.49947.0"
              }
            ]
          },
          "visible": "[equals(basics('niosModel'), 'cp-v1405')]"
        },
        {
          "name": "niosVersion-CP-V2205",
          "type": "Microsoft.Common.DropDown",
          "label": "NIOS version for CP-V2205",
          "defaultValue": "8.6.2",
          "toolTip": "Select the version of NIOS to load",
          "constraints": {
            "allowedValues": [
              {
                "label": "8.6.2",
                "value": "862.49947.0"
              }
            ]
          },
          "visible": "[equals(basics('niosModel'), 'cp-v2205')]"
        },
        {
          "name": "vmSize-IB-V825",
          "type": "Microsoft.Compute.SizeSelector",
          "label": "Virtual machine size for TE-V825",
          "toolTip": "Select the size of VM for TE-V825",
          "recommendedSizes": [
            "Standard_DS11_v2"
          ],
          "constraints": {
            "allowedSizes": [
              "Standard_DS11_v2"
            ]
          },
          "visible": "[equals(basics('niosModel'), 'IB-V825')]",
          "osPlatform": "Linux"
        },
        {
          "name": "vmSize-IB-V1425",
          "type": "Microsoft.Compute.SizeSelector",
          "label": "Virtual machine size for TE-V1425",
          "toolTip": "Select the size of VM for TE-V1425",
          "recommendedSizes": [
            "Standard_DS12_v2"
          ],
          "constraints": {
            "allowedSizes": [
              "Standard_DS12_v2"
            ]
          },
          "visible": "[equals(basics('niosModel'), 'IB-V1425')]",
          "osPlatform": "Linux"
        },
        {
          "name": "vmSize-IB-V2225",
          "type": "Microsoft.Compute.SizeSelector",
          "label": "Virtual machine size for TE-V2225",
          "toolTip": "Select the size of VM for TE-V2225",
          "recommendedSizes": [
            "Standard_DS13_v2"
          ],
          "constraints": {
            "allowedSizes": [
              "Standard_DS13_v2"
            ]
          },
          "visible": "[equals(basics('niosModel'), 'IB-V2225')]",
          "osPlatform": "Linux"
        },
        {
          "name": "vmSize-IB-V4015",
          "type": "Microsoft.Compute.SizeSelector",
          "label": "Virtual machine size for TE-V4015",
          "toolTip": "Select the size of VM for TE-V4015",
          "recommendedSizes": [
            "Standard_DS14_v2"
          ],
          "constraints": {
            "allowedSizes": [
              "Standard_DS14_v2"
            ]
          },
          "visible": "[equals(basics('niosModel'), 'IB-V4015')]",
          "osPlatform": "Linux"
        },
        {
          "name": "vmSize-IB-V4025",
          "type": "Microsoft.Compute.SizeSelector",
          "label": "Virtual machine size for TE-V4025",
          "toolTip": "Select the size of VM for IB-V4025",
          "recommendedSizes": [
            "Standard_DS14_v2"
          ],
          "constraints": {
            "allowedSizes": [
              "Standard_DS14_v2"
            ]
          },
          "visible": "[equals(basics('niosModel'), 'IB-V4025')]",
          "osPlatform": "Linux"
        },
        {
          "name": "vmSize-IB-V5005",
          "type": "Microsoft.Compute.SizeSelector",
          "label": "Virtual machine size for TE-V5005",
          "toolTip": "Select the size of VM for IB-V5005",
          "recommendedSizes": [
            "Standard_DS14_v2"
          ],
          "constraints": {
            "allowedSizes": [
              "Standard_DS11_v2",
              "Standard_DS12_v2",
              "Standard_DS13_v2",
              "Standard_DS14_v2"
            ]
          },
          "visible": "[equals(basics('niosModel'), 'IB-V5005')]",
          "osPlatform": "Linux"
        },
        {
          "name": "vmSize-CP-V805",
          "type": "Microsoft.Compute.SizeSelector",
          "label": "Virtual machine size for CP-V805",
          "toolTip": "Select the size of VM for CP-V805",
          "recommendedSizes": [
            "Standard_DS11_v2"
          ],
          "constraints": {
            "allowedSizes": [
              "Standard_DS11_v2"
            ]
          },
          "visible": "[equals(basics('niosModel'), 'cp-v805')]",
          "osPlatform": "Linux"
        },
        {
          "name": "vmSize-CP-V1405",
          "type": "Microsoft.Compute.SizeSelector",
          "label": "Virtual machine size for CP-V1405",
          "toolTip": "Select the size of VM for CP-V1405",
          "recommendedSizes": [
            "Standard_DS12_v2"
          ],
          "constraints": {
            "allowedSizes": [
              "Standard_DS12_v2"
            ]
          },
          "visible": "[equals(basics('niosModel'), 'cp-v1405')]",
          "osPlatform": "Linux"
        },
        {
          "name": "vmSize-CP-V2205",
          "type": "Microsoft.Compute.SizeSelector",
          "label": "Virtual machine size for CP-V2205",
          "toolTip": "Select the size of VM for CP-V2205",
          "recommendedSizes": [
            "Standard_DS13_v2"
          ],
          "constraints": {
            "allowedSizes": [
              "Standard_DS13_v2"
            ]
          },
          "visible": "[equals(basics('niosModel'), 'cp-v2205')]",
          "osPlatform": "Linux"
        },
        {
          "name": "vmDataDiskType",
          "type": "Microsoft.Common.DropDown",
          "label": "Data Disk Type for TE-V5005",
          "defaultValue": "Standard LRS",
          "toolTip": "Select the data disk type for IB-V5005",
          "constraints": {
              "allowedValues": [
                  {
                      "label": "Standard LRS",
                      "value": "Standard_LRS"
                  },
                  {
                      "label": "Premium LRS",
                      "value": "Premium_LRS"
                  }
              ],
              "required": true
          },
          "visible": "[equals(basics('niosModel'), 'IB-V5005')]"
        },
        {
          "name": "vmDataDiskSize",
          "type": "Microsoft.Common.TextBox",
          "label": "Data Disk Size for TE-V5005",
          "toolTip": "Select the size of Data Disk for IB-V5005. Minimum allowed size is 250GB",
          "constraints": {
            "required": true,
            "regex": "^([1-9][0-9]{3,}|25[0-9]|2[6-9][0-9]|[3-9][0-9][0-9])$",
            "validationMessage": "The size must be in numbers and minimum allowed size is 250GB"
          },
          "visible": "[equals(basics('niosModel'), 'IB-V5005')]"
        },
        {
          "name": "storageAccountForLogs",
          "type": "Microsoft.Storage.StorageAccountSelector",
          "label": "Storage account for BootDiagnostics.",
          "toolTip": "Storage account for the Boot Disgnostic file, must be a non premium type",
          "defaultValue": {
            "type": "Standard_LRS"
          },
          "constraints": {
            "allowedTypes": ["Standard_LRS"]
          },
          "options": {
            "hideExisting": false
          },
          "visible": true
        },
        {
          "name": "niosNetwork",
          "type": "Microsoft.Network.VirtualNetworkCombo",
          "label": {
            "virtualNetwork": "Virtual network",
            "subnets": "Subnets"
          },
          "toolTip": {
            "virtualNetwork": "Only virtual networks in the currently selected subscription and location are listed. If you choose to create a new virtual network, it will be created in the same subscription, location, and resource group as the storage account."
          },
          "defaultValue": {
            "addressPrefixSize": "/16"
          },
          "constraints": {
            "minAddressPrefixSize": "/29"
          },
          "options": {
            "hideExisting": false
          },
          "subnets": {
            "subnetLan1": {
              "label": "LAN1 interface's subnet",
              "defaultValue": {
                "name": "lan1",
                "addressPrefixSize": "/24"
              },
              "constraints": {
                "minAddressPrefixSize": "/30",
                "minAddressCount": 1
              }
            },
            "subnetMgmt": {
              "label": "MGMT interface's subnet",
              "defaultValue": {
                "name": "mgmt",
                "addressPrefixSize": "/24"
              },
              "constraints": {
                "minAddressPrefixSize": "/30",
                "minAddressCount": 1
              }
            }
          },
          "visible": true
        },
        {
          "name": "dnsAndPublicIP",
          "type": "Microsoft.Network.PublicIpAddressCombo",
          "label": {
            "publicIpAddress": "Public IP address",
            "domainNameLabel": "Public DNS name"
          },
          "toolTip": {
            "publicIpAddress": "Use a public IP address if you want to communicate with the virtual machine from outside the virtual network.",
            "domainNameLabel": "An \"A record\" that starts with the specified label and resolves to this public IP address will be registered with the Azure-provided DNS servers. Example: mylabel.westus.cloudapp.azure.com."
          },
          "defaultValue": {
            "domainNameLabel": "mydomain"
          },
          "constraints": {
            "required": {
              "domainNameLabel": true
            }
          },
          "options": {
            "hideNone": false,
            "hideDomainNameLabel": false,
            "hideExisting": false
          },
          "visible": true
        },
        {
          "name": "licenseSection",
          "type": "Microsoft.Common.Section",
          "label": "Licenses",
          "elements": [
            {
              "name": "licenses3",
              "type": "Microsoft.Common.OptionsGroup",
              "label": "Install temporary licenses",
              "defaultValue": "yes",
              "toolTip": "Select yes to install automatically temporary licenses NIOS, Grid, DNS, RPZ and Cloud. Validity of license is 60 days. Will add 5 min extra time on the VM Creation",
              "constraints": {
                "allowedValues": [
                  {
                    "label": "yes",
                    "value": "TE-SoT"
                  },
                  {
                    "label": "no",
                    "value": "none"
                  }
                ]
              },
              "visible": "[or(equals(basics('niosModel'), 'IB-V825'), equals(basics('niosModel'), 'IB-V1425'), equals(basics('niosModel'), 'IB-V2225'), equals(basics('niosModel'), 'IB-V4015'), equals(basics('niosModel'), 'IB-V4025'), equals(basics('niosModel'), 'IB-V5005'))]"
            },
            {
              "name": "licenses4",
              "type": "Microsoft.Common.OptionsGroup",
              "label": "Install temporary licenses",
              "defaultValue": "yes",
              "toolTip": "Select yes to install automatically temporary licenses NIOS, Grid, DNS, RPZ and Cloud(CP). Validity of license is 60 days. Will add 5 min extra time on the VM Creation",
              "constraints": {
                "allowedValues": [
                  {
                    "label": "yes",
                    "value": "CP-SoT"
                  },
                  {
                    "label": "no",
                    "value": "none"
                  }
                ]
              },
              "visible": "[or(equals(basics('niosModel'), 'cp-v805'), equals(basics('niosModel'), 'cp-v1405'), equals(basics('niosModel'), 'cp-v2205'))]"
            }
          ],
          "visible": true
        },
        {
          "name": "enhancedOptionsSection",
          "type": "Microsoft.Common.Section",
          "label": "Enhanced options",
          "elements": [
            {
              "name": "customData",
              "type": "Microsoft.Common.FileUpload",
              "label": "Upload file with custom data if required.",
              "toolTip": "These extra options intend to be used in specific case, in coordination with Infoblox Support",
              "constraints": {
                "required": false,
                "accept": ".yaml"
              },
              "options": {
                "multiple": false,
                "uploadMode": "file",
                "openMode": "text",
                "encoding": "UTF-8"
              },
              "visible": true
            }
          ],
          "visible": true
        }
      ]
    }],
    "outputs": {
      "vmName": "[basics('vmName')]",
      "location": "[location()]",
      "vmSize": "[coalesce(steps('vmSettings').vmSize-CP-V805,steps('vmSettings').vmSize-CP-V1405,steps('vmSettings').vmSize-CP-V2205,steps('vmSettings').vmSize-IB-V825,steps('vmSettings').vmSize-IB-V1425,steps('vmSettings').vmSize-IB-V2225,steps('vmSettings').vmSize-IB-V4015,steps('vmSettings').vmSize-IB-V4025,steps('vmSettings').vmSize-IB-V5005)]",
      "niosModel": "[basics('niosModel')]",
      "niosVersion":  "[coalesce(steps('vmSettings').niosVersion-CP-V805, steps('vmSettings').niosVersion-CP-V1405,steps('vmSettings').niosVersion-CP-V2205,steps('vmSettings').niosVersion-IB-V825,steps('vmSettings').niosVersion-IB-V1425,steps('vmSettings').niosVersion-IB-V2225,steps('vmSettings').niosVersion-IB-V4015,steps('vmSettings').niosVersion-IB-V4025,steps('vmSettings').niosVersion-IB-V5005)]",
      "adminPassword": "[basics('passwordSection').adminPassword]",

      "virtualNetworkName": "[steps('vmSettings').niosNetwork.name]",
      "virtualNetworkExistingRGName": "[steps('vmSettings').niosNetwork.resourceGroup]",
      "virtualNetworkAddressPrefix": "[steps('vmSettings').niosNetwork.addressPrefix]",
      "vnetNewOrExisting": "[steps('vmSettings').niosNetwork.newOrExisting]",

      "subnet1Prefix": "[steps('vmSettings').niosNetwork.subnets.subnetLan1.addressPrefix]",
      "subnet1Name": "[steps('vmSettings').niosNetwork.subnets.subnetLan1.name]",
      "subnet1StartAddress": "[steps('vmSettings').niosNetwork.subnets.subnetLan1.startAddress]",

      "subnet2Prefix": "[steps('vmSettings').niosNetwork.subnets.subnetMgmt.addressPrefix]",
      "subnet2Name": "[steps('vmSettings').niosNetwork.subnets.subnetMgmt.name]",
      "subnet2StartAddress": "[steps('vmSettings').niosNetwork.subnets.subnetMgmt.startAddress]",

      "vmDataDiskType": "[steps('vmSettings').vmDataDiskType]",
      "vmDataDiskSize": "[int(steps('vmSettings').vmDataDiskSize)]",

      "newStorageAccountForLogsName": "[steps('vmSettings').storageAccountForLogs.name]",
      "storageAccountForLogsType": "[steps('vmSettings').storageAccountForLogs.type]",
      "storageAccountForLogsNewOrExisting": "[steps('vmSettings').storageAccountForLogs.newOrExisting]",
      "storageAccountForLogsExistingRG": "[steps('vmSettings').storageAccountForLogs.resourceGroup]",
      "publicIPAddressName": "[steps('vmSettings').dnsAndPublicIP.name]",
      "publicIPDnsName": "[steps('vmSettings').dnsAndPublicIP.domainNameLabel]",
      "publicIPNewOrExistingOrNone": "[steps('vmSettings').dnsAndPublicIP.newOrExistingOrNone]",
      "publicIPExistingRGName": "[steps('vmSettings').dnsAndPublicIP.resourceGroup]",

      "availabilitySetNewOrExistingOrNone": "none",
      "tempLicenseOption": "[coalesce(steps('vmSettings').licenseSection.licenses3, steps('vmSettings').licenseSection.licenses4)]",

      "customData": "[coalesce(steps('vmSettings').enhancedOptionsSection.customData, '')]"
    }
  }
}
